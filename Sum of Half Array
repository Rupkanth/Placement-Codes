// Program to print Sum of first half of an array 
import java.util.*; 
 
class GFG 
{ 
 
public static void sum_of_elements(int []arr, 
        int n) 
{ 
 int sumfirst = 0; 
  
 for (int i = 0; i < n; i++) 
 { 
   
  // Add elements in first half sum 
  if (i < n / 2) 
  { 
   sumfirst += arr[i]; 
  } 
   
 } 
  
 System.out.println("Sum of first half elements is " + 
           sumfirst); 
} 
 
// Driver code 
public static void main(String[] args) 
{ 
 int []arr = { 20, 30, 60, 10, 25, 15, 40 }; 
 int n = arr.length; 
  
 // Function call 
 sum_of_elements(arr, n); 
} 
} 
